        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>
   <build>
       <pluginManagement>
           <plugins>
               <plugin>
                   <groupId>org.jacoco</groupId>
                   <artifactId>jacoco-maven-plugin</artifactId>
                   <version>0.8.3</version>
                   <configuration>
                       <haltOnFailure>${haltOnFailure}</haltOnFailure>
                       <rules>
                           <element>CLASS</element>
                           <excludes>za.ac.nuw.ac.domain.persistence</excludes>
                           <excludes>za.ac.nuw.ac.logic.flow</excludes>
                               <limits>
                                   <limit>
                                       <counter>INSTRUCTION</counter>
                                       <value>COVEREDRATIO</value>
                                       <minumum>0.8</minumum>
                                   </limit>
                                   <limit>
                                       <counter>LINE</counter>
                                       <value>COVEREDRATIO</value>
                                       <minumum>0.8</minumum>
                                   </limit>
                                   <limit>
                                       <counter>BRANHC</counter>
                                       <value>COVEREDRATIO</value>
                                       <minumum>0.8</minumum>
                                   </limit>
                               </limits>
                       </rules>
                   </configuration>
                   <executions>
                       <execution>
                           <id>jacoco-check</id>
                           <phase>test</phase>
                           <goals>
                               <goal>check</goal>
                           </goals>
                       </execution>
                       <execution>
                           <id>default-prepare-agent</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                       </execution>
                       <execution>
                           <id>default-report</id>
                           <phase>prepare-package</phase>
                           <goals>
                               <goal>report</goal>
                           </goals>
                       </execution>
                   </executions>
               </plugin>
           </plugins>
       </pluginManagement>
   </build>


</project>